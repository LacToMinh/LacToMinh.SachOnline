@model IEnumerable<LacToMinh.SachOnline.Models.SACH>

<h2 class="text-center">SÁCH BÁN NHIỀU</h2>

<style>
  .media {
    display: flex;
    align-items: flex-start;
    margin-bottom: 20px;
  }

  .media-left {
    width: 100px;
    height: 130px;
    overflow: hidden;
    margin-right: 15px;
    flex-shrink: 0;
  }

  .imgsachbannhieu {
    width: 100%;
    height: auto;
    transition: transform 0.9s ease;
    display: block;
  }

  .imgsachbannhieu:hover {
    transform: scale(1.3);
  }

  .media-body {
    flex: 1;
  }
</style>

<div class="row">
  @{
    var left = Model.Take(3).ToList();
    var right = Model.Skip(3).Take(3).ToList();
  }

  <div class="col-lg-6 col-md-6">
    <div class="media-object-default">
      @foreach (var item in left)
      {
        <div class="media">
          <div class="media-left"> <a href="#"> <img class="media-object imgsachbannhieu" style="" src="~/Images/@item.AnhBia" alt="placeholder image"> </a> </div>
          <div class="media-body">
            <h4 class="media-heading">@item.TenSach</h4>
            @item.MoTa.Substring(0, Math.Min(100, item.MoTa.Length))...
          </div>
        </div>
      }
    </div>
  </div>
  <div class="col-lg-6 col-md-6">
    <div class="media-object-default">
