<!-- (5) Phân trang động -->
<nav class="text-center">
  <ul class="pagination">
    @if (ViewBag.CurrentPage > 1)
    {
      <li>
        <a href="@Url.Action("Index", "LacToMinh_SachOnline", new { page = ViewBag.CurrentPage - 1 })" aria-label="Previous">
          <span aria-hidden="true">&laquo;</span>
        </a>
      </li>
    }

    @for (int i = 1; i <= ViewBag.TotalPages; i++)
    {
      if (i == ViewBag.CurrentPage)
      {
        <li class="active"><a href="#">@i</a></li>
      }
      else
      {
        <li><a href="@Url.Action("Index", "LacToMinh_SachOnline", new { page = i })">@i</a></li>
      }
    }

    @if (ViewBag.CurrentPage < ViewBag.TotalPages)
    {
      <li>
        <a href="@Url.Action("Index", "LacToMinh_SachOnline", new { page = ViewBag.CurrentPage + 1 })" aria-label="Next">
          <span aria-hidden="true">&raquo;</span>
        </a>
      </li>
    }
  </ul>
</nav>


