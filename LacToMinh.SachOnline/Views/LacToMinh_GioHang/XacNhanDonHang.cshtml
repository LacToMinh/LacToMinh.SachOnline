@{
  ViewBag.Title = "Xác Nhận Đơn Hàng";
  Layout = null;
}

<style>
  body {
    font-family: "Segoe UI", Roboto, sans-serif;
    background: #f8f9fa;
    color: #333;
  }

  .confirm-container {
    max-width: 600px;
    margin: 80px auto;
    background: #fff;
    border-radius: 12px;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
    text-align: center;
    padding: 40px 30px;
    animation: fadeIn 0.6s ease-in-out;
  }

  .confirm-icon {
    font-size: 70px;
    color: #0d6efd;
    margin-bottom: 20px;
  }

  .confirm-title {
    font-size: 26px;
    font-weight: 700;
    color: #0d6efd;
    margin-bottom: 15px;
  }

  .confirm-message {
    font-size: 17px;
    color: #444;
    margin-bottom: 30px;
    line-height: 1.6;
  }

  .btn-home {
    display: inline-block;
    background: #0d6efd;
    color: #fff;
    padding: 10px 22px;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    transition: 0.25s;
  }

  .btn-home:hover {
    background: #0b5ed7;
  }

  @@keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
</style>

<div class="confirm-container">
  <div class="confirm-icon">✅</div>
  <div class="confirm-title">XÁC NHẬN ĐƠN HÀNG</div>

  <div class="confirm-message">
    Cảm ơn quý khách đã tin tưởng mua hàng tại cửa hàng của chúng tôi.<br />
    Đơn hàng của quý khách đã được ghi nhận và sẽ được xử lý trong thời gian sớm nhất.
  </div>

  <a href="@Url.Action("Index", "LacToMinh_SachOnline")" class="btn-home">VỀ TRANG CHỦ</a>
</div>
