@model IEnumerable<IGrouping<int?, LacToMinh.SachOnline.Models.SACH>>

@{
  ViewBag.Title = "Group";
  Layout = "~/Views/Shared/_LayoutLacToMinh.cshtml";
}

<style>
  body {
    font-family: "Segoe UI", Arial, sans-serif;
  }

  h2 {
    text-align: center;
    margin: 30px 0;
    color: #004085;
    font-weight: 700;
    text-transform: uppercase;
  }

  h4 {
    background-color: #f8d7da;
    color: #721c24;
    padding: 10px 15px;
    border-left: 5px solid #dc3545;
    border-radius: 4px;
    margin-top: 40px;
  }

  table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 10px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    border-radius: 6px;
    overflow: hidden;
  }

    table th, table td {
      border: 1px solid #dee2e6;
      padding: 10px 12px;
      text-align: left;
      vertical-align: middle;
    }

    table th {
      background-color: #007bff;
      color: #fff;
      font-weight: bold;
    }

    table tr:nth-child(even) {
      background-color: #f2f6fc;
    }

    table tr:hover {
      background-color: #e2e6ea;
      transition: 0.2s;
    }

  .group-container {
    margin-bottom: 40px;
  }
</style>


<h2>DANH SÁCH SÁCH THEO CHỦ ĐỀ</h2>

@foreach (var group in Model)
{
  <div class="group-container">
    <h4>
      MÃ CHỦ ĐỀ: @group.Key - @group.FirstOrDefault().CHUDE.TenChuDe
    </h4>

    <table>
      <tr>
        <th>Mã Sách</th>
        <th>Tên Sách</th>
        <th>Tên Chủ Đề</th>
      </tr>

      @foreach (var sach in group)
      {
        <tr>
          <td>@sach.MaSach</td>
          <td>@sach.TenSach</td>
          <td>@sach.CHUDE.TenChuDe</td>
        </tr>
      }
    </table>
  </div>
}
