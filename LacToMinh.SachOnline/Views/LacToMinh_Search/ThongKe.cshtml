@model IEnumerable<LacToMinh.SachOnline.Models.ReportInfo>
@{
  ViewBag.Title = "ThongKe";
  Layout = "~/Views/Shared/_LayoutLacToMinh.cshtml";
}

<h2 class="page-title">📊 THỐNG KÊ SỐ ĐẦU SÁCH THEO CHỦ ĐỀ</h2>

<div class="table-container table-bordered">
  <table class="table-report">
    <thead>
      <tr>
        <th>Mã CD</th>
        <th>Tên chủ đề</th>
        <th>Số đầu sách</th>
        <th>Tổng số sách</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var item in Model)
      {
        <tr>
          <td>@item.Id</td>
          <td>@item.Name</td>
          <td>@item.Count</td>
          <td>@item.Sum</td>
        </tr>
      }
    </tbody>
  </table>
</div>

<style>
  .table-container {
    background: #ffffff;
    border-radius: 10px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    padding: 20px;
    width: 90%;
    margin: 0 auto;
    overflow-x: auto;
    animation: fadeIn 0.5s ease-in-out;
  }

  table.table-report {
    width: 100%;
    border-collapse: collapse; /* Hợp nhất viền */
    text-align: center;
    font-size: 15px;
    border: 1px solid #007bff; /* Viền ngoài bảng */
  }

  .table-report th, .table-report td {
    border: 1px solid #007bff; /* Viền giữa các ô */
    padding: 10px;
    vertical-align: middle;
  }

  .table-report thead th {
    background: linear-gradient(to right, #007bff, #00aaff);
    color: white;
    text-transform: uppercase;
    font-weight: 600;
  }

  .table-report tbody tr:nth-child(even) {
    background-color: #f8f9fa;
  }

  .table-report tbody tr:hover {
    background-color: #e9f3ff;
    transition: 0.3s;
  }

  .table-report td:nth-child(3),
  .table-report td:nth-child(4) {
    font-weight: 600;
    color: #0066ff;
  }

  .page-title {
    text-align: center;
    font-weight: 700;
    font-size: 26px;
    margin: 30px 0 20px 0;
    color: #004d99;
    letter-spacing: 1px;
    text-transform: uppercase;
  }

  /* Hiệu ứng nhẹ khi vào trang */
  @@keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }

    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

