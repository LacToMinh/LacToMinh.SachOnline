<!DOCTYPE html>

<html>
<head>
  <meta name="viewport" content="width=device-width" />
  <meta charset="utf-8" name="viewport" content="width=device-width, initial-scale=1">

  @*<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-3.7.0.min.js"></script>*@

  @*@Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery", "~/bundles/bootstrap")*@

  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" />
  <link rel="stylesheet" href="~/Content/site.css" />
  <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

  <title>Lạc Tô Minh - @ViewBag.Title</title>

  <style type="text/css">
    .imgbook {
      transition: all 1s ease-in;
      width: 400px;
    }

      .imgbook:hover {
        transform: scale(0.9);
        cursor: pointer;
      }

    .imgsachbannhieu {
      width: 100px;
    }
  </style>
</head>
<body>
  @Html.Action("NavPartial", "LacToMinh_SachOnline")

  @Html.Action("SliderPartial", "LacToMinh_SachOnline")

  <div class="container">
    <div class="row">
      <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">

        @Html.Action("ChuDePartial", "LacToMinh_SachOnline")
        
        @Html.Action("NhaXuatBanPartial", "LacToMinh_SachOnline")

      </div>
      <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12">
        @RenderBody()
      </div>
     
    </div>
    <hr>
  </div>
  <div class="container">

    @RenderSection("SachBanNhieu", required: false)
    <hr>
  </div>
  @Html.Action("FooterPartial", "LacToMinh_SachOnline")
</body>
</html>
