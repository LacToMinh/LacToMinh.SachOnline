@model LacToMinh.SachOnline.Models.NHAXUATBAN

@{
  Layout = null;
}

<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width" />
  <title>Thêm Nhà xuất bản</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" />
  <style>
    body {
      background-color: #f5f6fa;
      font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
    }

    .panel {
      margin-top: 40px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      border-radius: 8px;
    }

    .panel-heading {
      background-color: #5cb85c !important;
      color: white !important;
      border-radius: 8px 8px 0 0;
    }

      .panel-heading h3 {
        margin: 0;
        font-size: 20px;
        font-weight: bold;
      }

    .form-group label {
      font-weight: bold;
    }

    .btn + .btn {
      margin-left: 10px;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">➕ Thêm mới Nhà xuất bản</h3>
      </div>
      <div class="panel-body">
        <form class="form-horizontal" method="post" action="ThemNXB">
          <div class="form-group">
            <label class="col-md-3 control-label">Tên nhà xuất bản</label>
            <div class="col-md-7">
              <input type="text" name="tenNXB" class="form-control" placeholder="Nhập tên NXB" required />
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-3 control-label">Địa chỉ xuất bản</label>
            <div class="col-md-7">
              <input type="text" name="dcNXB" class="form-control" placeholder="Nhập địa chỉ NXB" />
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-3 control-label">Điện thoại xuất bản</label>
            <div class="col-md-7">
              <input type="text" name="dtNXB" class="form-control" placeholder="Nhập số điện thoại" />
            </div>
          </div>

          <div class="form-group">
            <div class="col-md-offset-3 col-md-7">
              <button type="submit" class="btn btn-primary">💾 Thêm</button>
              <button type="reset" class="btn btn-default">🗑 Xóa</button>
            </div>
          </div>
        </form>
        <p class="text-right">
          @Html.ActionLink("⬅ Quay lại danh sách", "Index", null, new { @class = "btn btn-link" })
        </p>
      </div>
    </div>
  </div>
</body>
</html>
