@model LacToMinh.SachOnline.Models.NHAXUATBAN

@{
  ViewBag.Title = "Xóa nhà xuất bản";
}

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" />

<div class="container">
  <h3 class="text-danger">Bạn có chắc chắn muốn xóa nhà xuất bản này?</h3>
  <hr />
  <dl class="dl-horizontal">
    <dt>Mã NXB:</dt>
    <dd>@Model.MaNXB</dd>

    <dt>Tên NXB:</dt>
    <dd>@Model.TenNXB</dd>

    <dt>Địa chỉ:</dt>
    <dd>@Model.DiaChi</dd>

    <dt>Điện thoại:</dt>
    <dd>@Model.DienThoai</dd>
  </dl>

  @using (Html.BeginForm("Delete", "NhaXuatBan", FormMethod.Post))
  {
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.MaNXB)
    <button type="submit" class="btn btn-danger">Xóa</button>
    @Html.ActionLink("Hủy", "Index", null, new { @class = "btn btn-default" })
  }
</div>
